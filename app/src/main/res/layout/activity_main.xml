<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DB9BE6"
            android:backgroundTint="#DB9BE6"
            android:orientation="horizontal"
            android:textAlignment="center">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#9C27B0"
                android:src="@drawable/camera"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:backgroundTint="#9C27B0"
                android:src="@drawable/website"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="88dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:backgroundTint="#9C27B0"
                android:src="@drawable/vector"
                android:contentDescription="@string/todo"/>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#9C27B0"
                android:src="@drawable/address"
                android:contentDescription="@string/todo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:adjustViewBounds="false"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/dfsz" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                app:srcCompat="@drawable/e"
                android:contentDescription="@string/todo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                app:srcCompat="@drawable/sd"
                android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="center"

                app:srcCompat="@drawable/sdfxz"
                android:contentDescription="@string/todo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/r"
                android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                app:srcCompat="@drawable/w"
                android:contentDescription="@string/todo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                app:srcCompat="@drawable/foto"
                android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                app:srcCompat="@drawable/q"
                android:contentDescription="@string/todo"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>